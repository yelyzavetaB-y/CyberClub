@*
    Layout for Manager Panel — CyberClub Admin
*@
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>CyberClub Admin Panel</title>

    <meta name="description" content="CyberClub Manager Dashboard" />
    <link rel="shortcut icon" href="~/assets/images/favicon.svg" />

    <!-- CSS -->
    <link rel="stylesheet" href="~/assets/fonts/bootstrap/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/assets/css/main.min.css" />
    <link rel="stylesheet" href="~/assets/vendor/overlay-scroll/OverlayScrollbars.min.css" />
</head>

<body>

    <div class="page-wrapper">
        <div class="main-container">
            <!-- Sidebar -->
            <nav id="sidebar" class="sidebar-wrapper">
                <div class="app-brand mb-3">
                    <a href="/Manager/Dashboard">
                        <img src="~/assets/images/logo.svg" class="logo" alt="CyberClub" />
                    </a>
                </div>

                <div class="sidebarMenuScroll">
                    <ul class="sidebar-menu">

                        <li class="treeview">
                            <a asp-controller="Manager" asp-action="Dashboard">
                                <i class="bi bi-bar-chart-line"></i>
                                <span class="menu-text">Dashboard</span>
                            </a>
                        </li>

                        <li class="treeview">
                            <a asp-controller="Manager" asp-action="Bookings">
                                <i class="bi bi-calendar-check"></i>
                                <span class="menu-text">Bookings</span>
                            </a>
                        </li>



                        <li class="treeview">
                            <a href="#">
                                <i class="bi bi-trophy"></i>
                                <span class="menu-text">Tournaments</span>
                            </a>
                            <ul class="treeview-menu px-2">
                                <li>
                                    <a asp-controller="Tournament" asp-action="Index">
                                        <i class="bi bi-list me-1"></i> All Tournaments
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="Tournament" asp-action="Upcoming">
                                        <i class="bi bi-clock-history me-1"></i> Upcoming
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="Tournament" asp-action="Ongoing">
                                        <i class="bi bi-play-circle me-1"></i> Ongoing
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="Tournament" asp-action="Completed">
                                        <i class="bi bi-check2-circle me-1"></i> Completed
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="Manager" asp-action="Create">
                                        <i class="bi bi-plus-circle me-1"></i> Create New
                                    </a>
                                </li>
                            </ul>
                        </li>


                        <li class="mt-4">
                            <form method="post" action="/Auth/Logout">
                                <button type="submit" class="btn btn-outline-danger w-100">
                                    <i class="bi bi-box-arrow-right me-2"></i> Logout
                                </button>
                            </form>
                        </li>

                    </ul>

                </div>
            </nav>
            <!-- Sidebar ends -->

            <div class="app-container">
                <!-- Header -->
                <div class="app-header d-flex align-items-center justify-content-between px-3">
                    <h5 class="m-0">Manager Panel</h5>
                    <div class="text-end">
                       @*  <span class="me-2">@Context.Session.GetString("User")</span> *@
                        <span class="badge bg-info">Manager</span>
                    </div>
                </div>

                <!-- Body -->
                <div class="app-body p-4">
                    @RenderBody()
                </div>

                <!-- Footer -->
                <div class="app-footer text-center small py-3">
                    © CyberClub
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/moment.min.js"></script>
    <script src="~/assets/vendor/overlay-scroll/jquery.overlayScrollbars.min.js"></script>
    <script src="~/assets/vendor/overlay-scroll/custom-scrollbar.js"></script>
    <script src="~/assets/js/custom.js"></script>

    @RenderSection("Scripts", required: false)
</body>

</html>
